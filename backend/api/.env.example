APP_NAME=PRS GWAS SNP Pipeline API
APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8000

# storage backend: memory (local dev) | supabase
APP_REPOSITORY_BACKEND=memory

# runner backend: mock (local dev) | aws_ssm
APP_RUNNER_BACKEND=mock

# Supabase (required when APP_REPOSITORY_BACKEND=supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=replace_me
SUPABASE_JOBS_TABLE=pipeline_jobs
SUPABASE_JOB_EVENTS_TABLE=pipeline_job_events

# AWS SSM (required when APP_RUNNER_BACKEND=aws_ssm)
AWS_REGION=us-east-1
AWS_SSM_INSTANCE_ID=i-xxxxxxxxxxxxxxxxx
AWS_SSM_DOCUMENT_NAME=AWS-RunShellScript
AWS_VM_PIPELINE_ROOT=/opt/PRS_GWAS_SNP_PIPELINE
AWS_VM_PYTHON=python3
AWS_VM_WORKER_SCRIPT=backend/aws/worker_runner.py

# Used by worker callbacks (set this to the public URL of the API service)
API_PUBLIC_BASE_URL=http://localhost:8000

# Default git ref checked out on the AWS VM before a run
PIPELINE_REPO_REF=main
